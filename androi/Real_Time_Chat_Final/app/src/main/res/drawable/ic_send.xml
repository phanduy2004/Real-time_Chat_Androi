<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#E0E0E0"/> <!-- Màu xám nhạt khi nhấn -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Không có màu nền -->
        </shape>
    </item>

</selector>
